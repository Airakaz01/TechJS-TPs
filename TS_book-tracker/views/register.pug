extends layout.pug

block content
  .max-w-md.w-full.bg-white.p-8.rounded-lg.shadow-md
    h2.text-2xl.font-bold.mb-6.text-center.text-gray-800 Créer un compte
    if errors && errors.length > 0
      each error in errors
        p.bg-red-100.border.border-red-400.text-red-700.px-4.py-3.rounded.relative.mb-4 #{error.msg}
    form(action="/auth/register", method="POST")
      .mb-4
        label.block.text-gray-700.text-sm.font-bold.mb-2(for="username") Nom d'utilisateur
        input.shadow.appearance-none.border.rounded.w-full.py-2.px-3.text-gray-700.leading-tight(type="text", id="username", name="username", placeholder="Nom d'utilisateur", value=username || '', required, class="focus:outline-none focus:shadow-outline")
      .mb-4
        label.block.text-gray-700.text-sm.font-bold.mb-2(for="password") Mot de passe
        input.shadow.appearance-none.border.rounded.w-full.py-2.px-3.text-gray-700.mb-3.leading-tight(type="password", id="password", name="password", placeholder="******************", value=password || '', required, class="focus:outline-none focus:shadow-outline")
      .mb-6
        label.block.text-gray-700.text-sm.font-bold.mb-2(for="password2") Confirmer le mot de passe
        input.shadow.appearance-none.border.rounded.w-full.py-2.px-3.text-gray-700.mb-3.leading-tight(type="password", id="password2", name="password2", placeholder="******************", value=password2 || '', required, class="focus:outline-none focus:shadow-outline")
      .flex.items-center.justify-between
        button.bg-blue-500.text-white.font-bold.py-2.px-4.rounded(type="submit", class="hover:bg-blue-700 focus:outline-none focus:shadow-outline") S'inscrire
    p.text-center.text-gray-600.text-xs.mt-6
      | Déjà un compte ?&nbsp;
      a.text-blue-500(href="/auth/login", class="hover:text-blue-800") Connectez-vous