extends layout.pug

block content
  .max-w-md.w-full.bg-white.p-8.rounded-lg.shadow-md
    h2.text-2xl.font-bold.mb-6.text-center.text-gray-800 Connexion
    if errors && errors.length > 0
      each error in errors
        p.bg-red-100.border.border-red-400.text-red-700.px-4.py-3.rounded.relative.mb-4 #{error.msg}
    form(action="/auth/login", method="POST")
      .mb-4
        label.block.text-gray-700.text-sm.font-bold.mb-2(for="username") Nom d'utilisateur
        input.shadow.appearance-none.border.rounded.w-full.py-2.px-3.text-gray-700.leading-tight(type="text", id="username", name="username", placeholder="Nom d'utilisateur", required, class="focus:outline-none focus:shadow-outline")
      .mb-6
        label.block.text-gray-700.text-sm.font-bold.mb-2(for="password") Mot de passe
        input.shadow.appearance-none.border.rounded.w-full.py-2.px-3.text-gray-700.mb-3.leading-tight(type="password", id="password", name="password", placeholder="******************", required, class="focus:outline-none focus:shadow-outline")
      .flex.items-center.justify-between
        button.bg-green-500.text-white.font-bold.py-2.px-4.rounded(type="submit", class="hover:bg-green-700 focus:outline-none focus:shadow-outline") Se connecter
    p.text-center.text-gray-600.text-xs.mt-6
      | Pas encore de compte ?&nbsp;
      a.text-blue-500(href="/auth/register", class="hover:text-blue-800") S'inscrire